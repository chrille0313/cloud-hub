{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["lint:code"]
    },
    "lint:code": {},
    "lint:fix": {
      "dependsOn": ["lint:code:fix"]
    },
    "lint:code:fix": {}
  }
}
