{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false,
      "env": ["ENV_FILE"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["ENV_FILE"]
    },
    "lint": {
      "dependsOn": ["lint:code", "lint:styles"]
    },
    "lint:code": {
      "dependsOn": []
    },
    "lint:styles": {
      "dependsOn": []
    },
    "//#lint:styles": {
      "dependsOn": []
    },
    "lint:fix": {
      "dependsOn": ["lint:code:fix", "lint:styles:fix"]
    },
    "lint:code:fix": {
      "dependsOn": []
    },
    "lint:styles:fix": {
      "dependsOn": []
    },
    "//#lint:styles:fix": {
      "dependsOn": []
    }
  }
}
