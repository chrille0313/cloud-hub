{
  "name": "@cloud-hub/openapi-spec",
  "version": "1.0.0",
  "description": "OpenAPI specification for the cloud-hub API",
  "type": "module",
  "files": [
    "dist/"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run generate-types && pkgroll && npm run copy-spec",
    "copy-spec": "cpx src/openapi.yaml dist/",
    "clean": "rimraf dist",
    "generate-types": "openapi-typescript src/openapi.yaml -o src/openapi.d.ts"
  },
  "dependencies": {
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/yamljs": "^0.2.34",
    "cpx": "^1.5.0",
    "openapi-typescript": "^7.6.1",
    "pkgroll": "^2.11.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2"
  }
}
