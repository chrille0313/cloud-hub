{
  "name": "cloud-hub",
  "description": "",
  "version": "0.0.0-development",
  "author": "chrille0313",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@11.2.0",
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest --maxWorkers 1",
    "lint": "turbo lint && npm run lint:styles",
    "ling:code": "turbo lint:code",
    "lint:styles": "prettier . --check",
    "lint:fix": "turbo lint:fix && npm run lint:styles:fix",
    "lint:code:fix": "turbo lint:code:fix",
    "lint:styles:fix": "prettier . --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/jest": "^29.5.14",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0"
  }
}
